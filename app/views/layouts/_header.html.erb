<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" <%= link_to t(".title"), root_path %></a>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to t(".profile"), current_user, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".users"), users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".book"), books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".logout"), logout_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t(".login"), login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <form class="form-inline mt-2 mt-md-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><%= t ".search" %></button>
      </form>
    </div>
  </nav>
</header>
